extends layout

block body
  div(ng-controller='AppCtrl')
    div.navbar.navbar-inverse
      div.navbar-inner
        a.brand(href="#") AdHoc-Railway
        ul.nav
          li
            a(href='turnouts') Turnouts
          li
            a(href='locomotives') Locomotives

    div.row-fluid
      div.span2
        div.well
          {{turnouts.length}} Turnouts
        div.well
